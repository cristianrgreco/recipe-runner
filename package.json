{
  "name": "recipe-runner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "amazon-cognito-identity-js": "^3.2.0",
    "axios": "^0.19.0",
    "moment": "^2.24.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "start": "REACT_APP_VERSION=$(npm run --silent version) react-scripts start",
    "build": "REACT_APP_VERSION=$(npm run --silent version) react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "version": "git rev-parse --short HEAD",
    "deploy:build": "npm run build",
    "deploy:sync": "aws s3 sync --delete build/ s3://recipe-runner",
    "deploy": "npm run deploy:build && npm run deploy:sync",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "format": "prettier --write src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1"
  },
  "prettier": {
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
